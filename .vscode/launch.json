    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "justMyCode": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Django Test",
            "type": "debugpy",
            "django": true,
            "justMyCode": true,
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--keepdb", 
                "api_v1.tests.test_v1_customer_profile"
            ],
            "console": "integratedTerminal"
        }
    ]
}